package com.example.ecommerce.categorias;

import org.springframework.data.jpa.repository.JpaRepository;



public interface CategoriasRepository extends JpaRepository<Categoria, Integer> {

    List<CategoriaSinProductos> findByNameContaining(String name);

    // Devuelve todas las categor√≠as
    List<CategoryWithoutProducts> findBy();

    Optional<CategoryWithProducts> findCategoryById(int id);
	
}
